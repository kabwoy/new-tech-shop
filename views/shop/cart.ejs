<%- include("../partials/head" , {title:"Show Product"}) %>
<%- include("../partials/header") %>
<h1 class="text-center">Carts Page</h1>
<div class="container">
    <div class="row">
    <% for(prod of data){ %> 
        <div class="card col-lg-3 mx-2 my-2">
            <div class="card-body">
                <img style="height: 100px;" src="<%= prod.product.image  %>" alt="">
                <h5 class="card-title"><%= prod.product.name  %></h5>
                <p class="card-text" style="font-weight: bold ;">Quantity: <%= prod.quantity %></p>
               <a href="/products/<%= data.id %>" class="btn btn-secondary">show product</a>
        </div>
        </div>
        <% } %> 
  
</div>
</div>
<%- include("../partials/footer") %>

